html, body, #app
  min-height 100vh
  max-height 100vh
  max-width 100% !important
  background-color #FFA713

body
  position relative !important

.app-login
  width 100%
  height 100vh
  display flex
  flex-flow row nowrap
  padding 10px
  justify-content center

.app-login-header
  align-self center
  small
    color #FFCB2C

.app-login-container
  color #FFF
  background-color #1389FF
  padding 10px
  align-self center
  text-align center
  box-shadow 10px 10px 10px 0px #F5820B
  border-radius 10px

.app-login-social
  margin 5px auto
  a
    margin 5px 10px auto
    width 100px

.app-content
  background-color #FFF !important
  padding 0
  margin 0
  width 100% !important
  position relative
  min-height 90vh
  height 90vh
  overflow-y hidden
