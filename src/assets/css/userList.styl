.user-list-container
  background-color #ECEFF1 !important
  // background-color #2D384A !important
  max-height 100%
  padding 0
  overflow-y auto
  min-height 90vh
  height 100%

.user-list
  padding 5px
  display flex
  flex-flow row wrap
  justify-content flex-start
  align-items center
  flex 1 auto

.user
  width 100%
  display flex
  flex-flow row nowrap
  margin 0 auto
  padding 5px
  align-items center
  border-bottom 1px solid rgba(235, 239, 242, 0.5)
  flex 1 1 auto
  a
    margin-left 10px
    color #2D384A
    text-decoration none
    font-weight 400
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  &:hover
    background-color #2D384A
    a
      color #FFF

.user-picture-status
  position relative
  width 20%
  .picture
    max-width 40px
    max-height 40px
    width 40px
    height 40px
    border-radius 50%
  .status
    max-width 10px
    max-height 10px
    width 10px
    height 10px
    border-radius 50%
    z-index 10
    background-color green
    position absolute
    bottom 0
    right 0